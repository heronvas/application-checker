<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44E9DD"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="logout"
        android:drawableLeft="@drawable/ic_baseline_arrow_left_24"
        android:id="@+id/logout"
        android:background="#44E9DD"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:layout_margin="50dp"
        android:text="Data Entry"
        android:textSize="20dp"
        android:id="@+id/data_entry"
        android:background="#15DC9E"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:layout_margin="50dp"
        android:text="Data Validation"
        android:textSize="20dp"
        android:background="#15DC9E"
        android:id="@+id/data_validation"
        />


</LinearLayout>